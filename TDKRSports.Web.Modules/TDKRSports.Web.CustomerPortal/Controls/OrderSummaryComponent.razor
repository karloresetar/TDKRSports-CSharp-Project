@inject NavigationManager navigationManager

    <div class="card m-2" style="width: 25rem;">
        <div class="card-body">
            <h5 class="card-title">Order Summary</h5>
            <div class="card-text d-flex justify-content-between">
                <div>
                    Items (@itemsCount):
                </div>
                <div>
                    @itemsTotalPrice €
                </div>
            </div>
            <div class="card-text d-flex justify-content-between">
                <div>
                    Shipping And Handling:
                </div>
                <div>
                    <text>0.00€</text>
                </div>
            </div>
            <div class="card-text d-flex justify-content-between">
                <div>
                    Estimated Tax:
                </div>
                <div>
                    <text>0.00€</text>
                </div>
            </div>
            <hr />
            <div class="card-text d-flex justify-content-between" style="color:darkred">
                <div>
                    <b>Order Total:</b>
                </div>
                <div>
                    <b>@itemsTotalPrice €</b>
                </div>
            </div>
        </div>
        @if(!HidePlaceOrder)
        {
            <button class="button btn-primary" @onclick="PlaceOrder">Place your order</button>
        }
    </div>


@code {
    int itemsCount = 0;
    double itemsTotalPrice = 0;

    [Parameter]
    public Order Order { get; set; }

    [Parameter]
    public bool HidePlaceOrder { get; set; } = false; //ako smo na ruti placeorder da nam se ne vidi botun PlaceYourOrder jer korisnik je to vec dodao na ruti shoppingcart

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        if(Order != null)
        {
            itemsCount = Order.LineItems.Count;
            itemsTotalPrice = 0;
            Order.LineItems.ForEach(x => itemsTotalPrice += x.Price * x.Quantity);
        }
    }

    private void PlaceOrder()
    {
        navigationManager.NavigateTo("/PlaceOrder");
    }
}

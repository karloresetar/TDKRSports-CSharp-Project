@if (this.Product != null)
{  
    <tr>
        <td>
            <NavLink href="@($"product/{@Product.Id}")">
                @Product.Name
            </NavLink>
        </td>
        <td>@Product.Brand</td>
        <td>@Product.Price.ToString("C")</td>
    </tr>
}

@code {
    [Parameter]
    public Product Product {get; set;}

}
